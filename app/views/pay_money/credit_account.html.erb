<!-- Login -->
<div class = "login">
  <div class="page-header">
      <div class="icon">
          <span class="ico-arrow-right"></span>
      </div>
      <h1>Paymoney<small>Créditer un compte</small></h1>
  </div>
  <div class = "row-fluid">
	  <div class = "span12">
	    <%#= render 'layouts/flash_messages' %>
	    <% if @error %>
        <div class = "alert alert-error">
          <ul>
          <% @error_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <% if @success %>
        <div class = "alert alert-success">
          <% @success_messages.each do |msg| %>
            <%= msg %>
          <% end %>
        </div>
      <% end %>
	    <div class = "block">



      <!------------------------------------------ Data-fluid ----------------------------------->
		  <div class = "data-fluid" >
		    <%= form_tag ("/PayMoney/Account/AddCredit") do %>
	        <div class = "<%= @accountcss %>">
	          <div class = "span3">
		          Numéro de compte
	          </div>
	          <div class = "span9">
		          <%= text_field_tag "account", params[:account], placeholder: 'Veuillez entrer le numéro de compte' %>
	          </div>
	        </div>
  <!--
	        <div class = "<%#= @passwordcss %>">
	          <div class = "span3">
		          Mot de passe
	          </div>
		        <div class = "span9">
			        <%#= password_field_tag "password", "", placeholder: 'Veuillez entrer le mot de passe' %>
		        </div>
	        </div>
  -->
	        <div class = "<%= @amountcss %>">
	          <div class = "span3">
		          Code PIN
	          </div>
	          <div class = "span9">
		          <%= text_field_tag "pin", params[:amount], placeholder: 'Veuillez entrer le code PIN' %>
	          </div>
	        </div>
          <br />
          <div class="span12">
		        <button class="btn">
			        Créditer le compte <div class="icon-arrow-next icon-white"></div>
		        </button>
	        </div>
        <% end %>
        <%= render "account_management_links" %>
		  </div>
	    <!------------------------------------------ Data-fluid ----------------------------------->
	    </div>

	  </div>
  </div>
</div>
<!-- END Login -->
