<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>E-kiosk<small>Liste des ayants droits</small></h1>
</div>
<div class = "row-fluid">
	<div class = "span12">
	  <div class = "block">   
		  <div class = "head green" >
		    <div class = "icon" >
		      <span class = "ico-pen-2"></span>		      
		    </div>  
		    <h2>Liste des différents ayants droit</h2>
		  </div>
		  <div class = "data-fluid">
		    <table cellpadding = "0" cellspacing = "0" widht = "100%" class = "table table-hover">
		      <thead>
		        <tr>
		          <th width = "20%">
		            Id
		          </th>
		          <th width = "20%">
		            Nom
		          </th>
		          <th width = "20%">
		            Numéro de téléphone
		          </th>
		          <th width = "20%">
		            Numéro de compte
		          </th>
		          <th width = "20%">
		            Solde
		          </th>
		        </tr>
		      </thead>
		      <tbody>
			<% if @ayants_droit.nil? %>
			  <tr>
			    <td colspan = "5">Aucun résultat à afficher</td>
			  </tr>
			<% else %>
		          <% @ayants_droit.each do |ayant_droit| %>
		            <tr>
		              <td><%= ayant_droit.xpath("idAyDroit").text %></td>
		              <td><%= ayant_droit.xpath("ayDroitNom").text %></td>
		              <td><%= ayant_droit.xpath("ayDroitNumero").text %></td>
		              <td><%= ayant_droit.xpath("ayDroitNumeroCompte").text %></td>
		              <td><%= ayant_droit.xpath("ayDroitcolSolde").text %></td>
		            </tr>
		          <% end %>
			<% end %>
		      </tbody>
		    </table>
		  </div>
	  </div>	
	  
	</div>
</div>


